{
  "name": "InTech - geekvol16",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24",
      "pnpm": true
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25"
    },
    "ghcr.io/aquaproj/devcontainer-features/aqua-installer:0.1.6": {
      "aqua_version": "v2.55.3"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/dhoeric/features/google-cloud-cli:1": {}
  },

  "postCreateCommand": "aqua i && npm install -g @anthropic-ai/claude-code @openai/codex && sudo chown -R vscode:vscode /home/vscode/.claude /home/vscode/.codex",

  "remoteEnv": {
    "PATH": "/home/vscode/.local/share/aquaproj-aqua/bin:${containerEnv:PATH}"
  },

  "mounts": [
    "source=claude-config,target=/home/vscode/.claude,type=volume",
    "source=codex-config,target=/home/vscode/.codex,type=volume"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "biomejs.biome",
        "anthropic.claude-code",
        "openai.chatgpt",
        "hashicorp.terraform",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },

  "remoteUser": "vscode"
}